<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_page"
    tools:context=".activity.SettingActivity">
    <RelativeLayout
        style="@style/topbar_bg"
        android:background="@color/transparent">
        <ImageButton style="@style/xsz_topbar_return_img" />
        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="设置" />
    </RelativeLayout>
    <View
        style="@style/divider_horizontal_1px" />
    <LinearLayout
        android:id="@+id/ll_setting_clear_cache"
        style="@style/content_item_white" >
        <TextView
            style="@style/content_item_lf_tv"
            android:layout_weight="1"
            android:text="清除缓存" />

        <ImageView
            style="@style/content_item_rt_img"
            android:padding="0dp" />
    </LinearLayout>
    <View
        style="@style/divider_horizontal_1px" />
    <LinearLayout
        android:id="@+id/ll_setting_about_us"
        style="@style/content_item_white" >
        <TextView
            style="@style/content_item_lf_tv"
            android:layout_weight="1"
            android:text="关于我们" />

        <ImageView
            style="@style/content_item_rt_img"
            android:padding="0dp" />
    </LinearLayout>
</LinearLayout>