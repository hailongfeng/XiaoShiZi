<?xml version="1.0" encoding="utf-8"?><!-- ListView中的ItemView里不要用Button等默认hasFocus的控件，以免onItemClick事件无响应 --><!-- 如果一定要用，则必须在根布局加上 android:descendantFocusability="blocksDescendants" -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="已发送验证码至"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_user_phone"
            android:text="186****6272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="wrap_content"
                app:rv_strokeWidth="@dimen/dp_1"
                app:rv_cornerRadius="@dimen/dp_5"
                app:rv_strokeColor="@color/gray_2"
                android:layout_height="35dp">
            <EditText
                android:id="@+id/edt_user_input_code"
                android:hint="请输入验证码"
                android:background="@drawable/null_drawable"
                android:layout_width="160dp"
                android:paddingLeft="@dimen/dp_5"
                android:inputType="number"
                android:maxLength="6"
                android:lines="1"
                android:singleLine="true"
                android:layout_height="match_parent" />
            </com.flyco.roundview.RoundLinearLayout>
            <com.flyco.roundview.RoundTextView
                android:id="@+id/btn_resend"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="重新获取"
                android:textColor="@android:color/white"
                app:rv_backgroundColor="@color/colorPrimary"
                app:rv_backgroundPressColor="@color/colorPrimaryDark"
                app:rv_cornerRadius="5dp" />
        </LinearLayout>
        <View style="@style/divider_horizontal_1dp"/>
        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            app:rv_cornerRadius_BL="10dp"
            app:rv_cornerRadius_BR="10dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
