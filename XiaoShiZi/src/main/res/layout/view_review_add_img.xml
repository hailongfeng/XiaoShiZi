<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/ivAdd"
            android:layout_width="@dimen/dimen_dp_107"
            android:layout_height="@dimen/dimen_dp_107"
            android:src="@mipmap/ic_tianjia"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rtv_credentials_video_add"
            android:visibility="gone"
            android:layout_width="107dp"
            android:layout_height="107dp"
            app:riv_border_color="@color/gray_slight"
            app:riv_border_width="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add"
            android:textColor="@color/black_slight" />

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/frameLayoutImgs"
            android:layout_width="@dimen/dimen_dp_107"
            android:layout_height="@dimen/dimen_dp_107">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/ivImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:paddingBottom="@dimen/dimen_dp_10"
                android:paddingLeft="@dimen/dimen_dp_10"
                android:id="@+id/ivDel"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
