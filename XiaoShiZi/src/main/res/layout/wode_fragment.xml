<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/activity_page">

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1" >
        <LinearLayout style="@style/ll_vertical_match_match" >

           <FrameLayout
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:background="@color/colorPrimary"
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   android:layout_height="wrap_content">
                   <com.makeramen.roundedimageview.RoundedImageView
                       android:id="@+id/iv_user_face"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_margin="10dp"
                       android:src="@mipmap/ic_launcher"
                       app:riv_border_color="@color/white"
                       app:riv_border_width="1dp"
                       app:riv_oval="true" />

                   <TextView
                       android:layout_marginTop="10dp"
                       android:id="@+id/txt_user_name"
                       android:layout_width="wrap_content"
                       android:layout_height="40dp"
                       android:layout_toRightOf="@id/iv_user_face"
                       android:gravity="center_vertical"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:text="李大鹏" />
                   <TextView
                       android:text="18697386272"
                       android:layout_toRightOf="@id/iv_user_face"
                       android:layout_below="@id/txt_user_name"
                       android:id="@+id/txt_user_telphone"
                       android:gravity="center_vertical"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="10dp"
                       android:id="@+id/iv_user_setting"
                       android:scaleType="fitXY"
                       android:src="@drawable/wode_setting"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentTop="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_marginTop="100dp"
                   android:background="@color/colorPrimary"
                   android:layout_height="100dp" />
               <android.support.v7.widget.RecyclerView
                   android:layout_marginTop="110dp"
                   android:id="@id/rvBaseRecycler"
                   style="@style/lv" />
           </FrameLayout>

            <com.flyco.roundview.RoundTextView
                android:id="@+id/btn_add_student"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="添加学生"
                android:drawableLeft="@drawable/icon_student_add"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                app:rv_cornerRadius="5dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="16dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCustodyRecycler"
                    style="@style/lv" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
                <LinearLayout
                    style="@style/ll_vertical_match_wrap">
                <LinearLayout
                    android:id="@+id/ll_my_jifen"
                    style="@style/content_item_white" >
                    <ImageView
                        style="@style/content_item_lf_img"
                        android:padding="0dp" />
                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="我的积分" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>
                <View
                    style="@style/divider_horizontal_1px" />
                    <LinearLayout
                        android:id="@+id/ll_my_huancun"
                        style="@style/content_item_white" >
                        <ImageView
                            style="@style/content_item_lf_img"
                            android:padding="0dp" />
                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="我的缓存" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>
                    <View
                        style="@style/divider_horizontal_1px" />
                    <LinearLayout
                        android:id="@+id/ll_my_jiazhangjianyi"
                        style="@style/content_item_white" >
                        <ImageView
                            style="@style/content_item_lf_img"
                            android:padding="0dp" />
                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="家长建议反馈" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>
                    <View
                        style="@style/divider_horizontal_1px" />
                    <LinearLayout
                        android:id="@+id/ll_my_shezhi"
                        style="@style/content_item_white" >
                        <ImageView
                            style="@style/content_item_lf_img"
                            android:padding="0dp" />
                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="设置" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>
                    <View
                        style="@style/divider_horizontal_1px" />
                    <LinearLayout
                        android:id="@+id/ll_my_fenxiang"
                        style="@style/content_item_white" >
                        <ImageView
                            style="@style/content_item_lf_img"
                            android:padding="0dp" />
                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="分享" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>
                    <View
                        style="@style/divider_horizontal_1px" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>