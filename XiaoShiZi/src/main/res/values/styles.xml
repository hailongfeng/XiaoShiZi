<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="bottom_tab_ll" parent="ll_vertical_match_match">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="bottom_tab_iv" parent="img_btn"></style>

    <style name="bottom_tab_tv" parent="text_micro">
        <item name="android:textColor">@color/black_to_bluesky</item>
    </style>

    <style name="xsz_topbar_return_img" parent="topbar_left_btn">
        <item name="android:src">@drawable/icon_back</item>
    </style>
    <style name="xsz_main_tab_text_appearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_small</item>

    </style>

</resources>
