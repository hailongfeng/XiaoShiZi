<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/xsz_text_black</item>
    </style>

    <style name="bottom_tab_ll" parent="ll_vertical_match_match">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="bottom_tab_iv" parent="img_btn"></style>

    <style name="bottom_tab_tv" parent="text_micro">
        <item name="android:textColor">@color/black_to_bluesky</item>
    </style>

    <style name="xsz_topbar_return_img" parent="topbar_left_btn">
        <item name="android:src">@drawable/icon_back</item>
    </style>
    <style name="xsz_main_tab_text_appearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_small</item>

    </style>
     <style name="RadioBtnMyIcon" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/null_drawable</item> 
        <item name="android:button">@drawable/radiobutton_icon</item> 
        <item name="android:paddingLeft">5dp</item> 
        <item name="android:textSize">@dimen/text_size_small</item> 
    </style>
      <!-- CustomCheckBox theme -->
         <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
              <item name="android:button">@drawable/radiobutton_icon</item> 
         </style>

    <declare-styleable name="HeaderViewPager">
        <attr name="hvp_topOffset" format="dimension"/>
    </declare-styleable>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/xsz_bg_gray</item>
        <item name="colorControlActivated">@color/xsz_bg_gray</item>
    </style>
</resources>
